<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/timerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:textSize="30sp"
        android:textColor="#FFFFFF"
        android:layout_centerInParent="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp">

        <Button android:id="@+id/btnImg1" android:text="1"/>
        <Button android:id="@+id/btnImg2" android:text="2"/>
        <Button android:id="@+id/btnImg3" android:text="3"/>
        <Button android:id="@+id/btnImg4" android:text="4"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/timerButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <Button android:id="@+id/btnStartStop" android:text="Iniciar" />
        <Button android:id="@+id/btnTimer5" android:text="5 min" />
        <Button android:id="@+id/btnTimer10" android:text="10 min" />
        <Button android:id="@+id/btnSpotify" android:text="Spotify" />
    </LinearLayout>
</RelativeLayout>
